<div class="main-container">
  <header>
    <h1>Meu Aplicativo</h1>
    <nav>
      <ul>
        <li>
          <LinkTo @route="index">Home</LinkTo>
        </li>
        <li>
          <LinkTo @route="segunda-pagina">Segunda Página</LinkTo>
        </li>
      </ul>
    </nav>
  </header>

<div class="form-container d-flex justify-content-center align-items-center">
  <!-- app/templates/index.hbs -->

  <h2>Cadastro de Usuário</h2>

  <form {{action "submitFormulario" on="submit" }} class="row g-3">
    <div class="col-auto">
      <input type="text" id="nome" name="nome" value={{this.nome}} {{on "input" this.updateNome}} class="form-control" placeholder="Nome" required>
    </div>

    <div class="col-auto">
      <input type="text" id="sobrenome" name="sobrenome" value={{this.sobrenome}} {{on "input" this.updateSobrenome}} class="form-control" placeholder="Sobrenome" required>
    </div>

    <div class="col-auto">
      <input type="text" id="telefone" name="telefone" value={{this.telefone}} {{on "input" this.updateTelefone}} class="form-control" placeholder="Telefone" required>
    </div>

    <!-- Botão estilizado com Bootstrap -->
    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </form>
</div>

</div>
