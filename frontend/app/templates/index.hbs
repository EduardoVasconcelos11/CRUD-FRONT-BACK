<div class="main-container">
  <header>
    <h1>Meu Aplicativo</h1>
    <nav>
      <ul>
        <li>
          <LinkTo @route="index">Home</LinkTo>
        </li>
        <li>
          <LinkTo @route="segunda-pagina">Segunda Página</LinkTo>
        </li>
      </ul>
    </nav>
  </header>

 <div class="form-container">
  <!-- app/templates/index.hbs -->

  <h2>Cadastro de Usuário</h2>

  <form {{action "submitFormulario" on="submit" }}>
    <label>
      <input type="text" id="nome" name="nome" value={{this.nome}} {{on "input" this.updateNome}} placeholder="Nome" required>
    </label>

    <label>
      <input type="text" id="sobrenome" name="sobrenome" value={{this.sobrenome}} {{on "input" this.updateSobrenome}} placeholder="Sobrenome" required>
    </label>

    <label>
      <input type="text" id="telefone" name="telefone" value={{this.telefone}} {{on "input" this.updateTelefone}} placeholder="Telefone" required>
    </label>

    <button type="submit">Enviar</button>
  </form>
</div>

</div>
